IKRS.GirihCanvasHandler = function() {
    
    IKRS.Object.call( this );

    this.canvasWidth           = canvas_width;
    this.canvasHeight          = canvas_height;
    
    this.canvas                = document.getElementById("gireh_canvas");
    this.context               = this.canvas.getContext( "2d" );

    redraw();

};

IKRS.Point2.prototype.add = function( amount ) {
    this.x += amount.x;
    this.y += amount.y;
}

/*
IKRS.Point2.prototype.sub = function( amount ) {
    this.x -= amount.x;
    this.y -= amount.y;
}
*/

IKRS.Point2.prototype.clone = function() {
    return new IKRS.Point2( this.x, this.y );
}

IKRS.Point2.prototype.rotate = function( center,
					 theta
				       ) {
    
    // Thanks to
    // http://stackoverflow.com/questions/786472/rotate-a-point-by-an-angle
    this.x = Math.cos(theta) * (this.x-center.x) - sin(theta) * (p.y-center.y) + center.x;
    this.y = Math.sin(theta) * (this.x-center.x) - cos(theta) * (p.y-center.y) + center.y;
    
}


IKRS.Point2.prototype.constructor = IKRS.Point2;

